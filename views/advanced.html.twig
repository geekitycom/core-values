{% extends "layout.html.twig" %}

{% block content %}
<div class="container">
    <div class="page-header">
        <h1>Advanced</h1>
    </div>

    <form method="POST" action="/advanced/" class="well">
        <div class="form-group">
            <label for="values">Available Values</label>
            <textarea class="form-control" id="values" name="values" rows="50">{{ values }}</textarea>
        </div>
        <div class="form-group">
            <label for="count">Top <em>x</em> values</label>
            <input type="text" class="form-control" id="count" name="count" value="{{ count }}">
        </div>
        <div class="alert alert-danger" role="alert">
            WARNING: Submitting this form will reset your quiz.
        </div>
        <input type="submit" name="update" value="Update" class="btn btn-primary">
        <input type="submit" name="reset" value="Reset" class="btn btn-warning">
    </form>
</div>
{% endblock content %}
